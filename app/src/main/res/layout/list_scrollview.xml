<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/kategori_1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/border1"
            android:gravity="center"
            android:hint="Forum"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/kategori_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/kategori_1"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/border1"
            android:hint="Jual/Beli"
            android:textSize="15sp"
            android:gravity="center" />

        <Button
            android:id="@+id/kategori_3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/kategori_2"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/border1"
            android:hint="Diskusi"
            android:textSize="15sp"
            android:gravity="center" />

        <Button
            android:id="@+id/kategori_4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/kategori_3"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/border1"
            android:hint="Introduction"
            android:textSize="15sp"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/kategori_4"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/border1"
            android:hint="Kesehatan"
            android:textSize="15sp"
            android:gravity="center"/>
    </RelativeLayout>

</HorizontalScrollView>